<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="hr_attendance_leave_rule_user" model="ir.rule">
        <field name="name">User Attendances And Absences</field>
        <field name="model_id" ref="model_hr_attendance_leave" />
        <field
      name="domain_force"
    >[('user_id', '=', user.id), ('company_id', 'in', company_ids)]</field>
        <field name="groups" eval="[(4,ref('base.group_user'))]" />
    </record>

    <record id="hr_attendance_leave_rule_manager" model="ir.rule">
        <field name="name">All Attendances And Absences</field>
        <field name="model_id" ref="model_hr_attendance_leave" />
        <field name="domain_force">[('company_id', 'in', company_ids)]</field>
        <field
      name="groups"
      eval="[(4,ref('hr_attendance.group_hr_attendance_user'))]"
    />
    </record>
</odoo>
